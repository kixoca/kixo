%section#content
  .container
    .row
      .eight.columns
        .page
          .page-head
            .container
              .header-group
                %h1 Professional Sign In
                %h3.subheader Sign in to your professional account
          .page-body
            .container
              = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

                = f.label :email
                = f.email_field :email

                = f.label :password
                = f.password_field :password

                - if devise_mapping.rememberable?
                  %label
                    = f.check_box :remember_me
                    Remember me

                .actions
                  = f.submit "Sign in", :class => "button"

              %hr

              = render "professionals/shared/links"

      .four.columns
        = render "professionals/shared/panels"
