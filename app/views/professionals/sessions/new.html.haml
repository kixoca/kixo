%section#content
  .container
    .row.page
      .eight.columns
        .header-group
          %h1 Professional Sign In
        %hr

        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

          = f.label :email
          = f.email_field :email

          = f.label :password
          = f.password_field :password

          - if devise_mapping.rememberable?
            %label
              = f.check_box :remember_me
              Remember me

          .actions
            = f.submit "Sign in", :class => "button"

      .four.columns
        = render "professionals/shared/links"
