%section#content
  .container
    .row
      .eight.columns
        .page.professional
          %header
            .container
              .row
                .three.columns.text-center
                  .headshot
                    = image_tag @professional.headshot.url(:large)
                .nine.columns.mobile-text-center
                  %h1.name
                    = @professional.name
                  %p.professions
                    = @professional.professions_list
                  %p.topics
                    = "Specializes in"
                    = "<strong>#{@professional.topics_list}</strong>".html_safe
                  %p.bio
                    = @professional.bio
          %section#metrics.page-section
            .container
              %ul.metrics.block-grid.four-up
                %li
                  .value
                    = @professional.points
                  .key points
                %li
                  .value
                    = @professional.answers.count
                  .key answers
                %li
                  .value
                    = @professional.reviews.count
                  .key reviews
                %li
                  .value
                    = @professional.guides.count
                  .key guides
          %section#location.location.page-section
            .container
              .row
                .six.columns
                  %h4 Address
                  %p.address
                    - unless @professional.street_address_1.blank?
                      %span.street-address-1
                        = "#{@professional.street_address_1}, "
                      - unless @professional.street_address_2.blank?
                        %span.street-address-2
                          = @professional.street_address_2
                      %br
                    - unless @professional.locality.nil?
                      %span.locality
                        = @professional.locality.name
                      %br
                    - unless @professional.region.nil?
                      %span.region
                        = @professional.region.name
                    - unless @professional.postal_code.blank?
                      %span.postal_code
                        = @professional.postal_code
                    %br
                    - unless @professional.country.nil?
                      %span.country
                        = @professional.country.name
                  %h4 Contacts
                  %p.contacts
                    .tel
                      = @professional.tel
                .six.columns
                  %h4 Map
                  %p.map
                    .gmap{:data => {:latitude => @professional.latitude, :longitude => @professional.longitude}}
                      .marker{:data => {:latitude => @professional.latitude, :longitude => @professional.longitude}}
          %section#reviews.page-section
            .container
              .row
                .twelve.columns
                  %h4 Reviews
                  - unless @reviews.blank?
                    %ul.reviews
                      - @reviews.each do |review|
                        %li
                          = render "reviews/shared/loop", :review => review
                    = paginate @reviews
                  - else
                    %p.no-records
                      = "No reviews for #{@professional.name} yet."
                  = render "reviews/shared/new", :professional => @professional
          %section#guides.page-section
            .container
              .row
                .twelve.columns
                  %h4 Guides
                  - unless @guides.nil?
                    %ul.guides
                      - @guides.each do |guide|
                        %li
                          = guide.topic.name
                          = guide.title
                          = guide.excerpt
                  - else
                    %p.no-records
                      = "#{@professional.name} hasn't written any guide yet."
      .four.columns
        .panel
          %h5
            = "Similar professionals in #{@professional.locality.name}, #{@professional.region.name}"
          - unless @similar_professionals.blank?
            %ul.similar-professionals
              - @similar_professionals.each do |professional|
                %li
                  = render "professionals/shared/list", :professional => professional
          - else
            %p.no-records
              No similar professionals found.
