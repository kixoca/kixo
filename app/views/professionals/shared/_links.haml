- if devise_mapping.recoverable? && controller_name != 'passwords'
  %h5 Forgot your password?
  %a.small.button.secondary{:href => new_password_path(resource_name)} Reset my password

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %h5 Didn't receive confirmation instructions?
  %a.small.button.secondary{:href => new_confirmation_path(resource_name)}

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %h5 Didn't receive unlock instructions?
  %a.small.button.secondary{:href => new_unlock_path(resource_name)}