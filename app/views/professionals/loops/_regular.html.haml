- unless professional.nil?
  .box.professional.loop.standard
    %section
      .container
        = link_to professional_path(professional) do
          = image_tag professional.headshot.url(:medium), :class => "headshot"
        %h4.name
          = link_to professional.name, professional_path(professional)
        .whois
          - unless professional.professions.empty?
            %span.professions
              = professional.profession_list
        .address.short
          %i.foundicon-location
          = professional.short_address
    %section
      .container.tight
        %ul.metrics.block-grid.three-up
          %li
            .value= professional.points
            .key=t "professionals.metrics.points"
          %li
            .value= professional.answers.count
            .key=t "professionals.metrics.answers"
          %li
            .value= professional.reviews.count
            .key=t "professionals.metrics.reviews"