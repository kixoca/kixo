%section#content
  .container
    .row
      .eight.columns
        .page
          .page-head
            .header-group
              %h1 Sign In
              %h3.subheader Sign in to your existing account
          .page-body
            = render :partial => "shared/show_flash"

            = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

              = f.label :email
              = f.email_field :email

              = f.label :password
              = f.password_field :password

              - if devise_mapping.rememberable?
                %label
                  = f.check_box :remember_me
                  = t(:remember_me)

              .actions
                = f.submit "Sign in", :class => "button"

            %hr

            = render "users/shared/links"

      .four.columns
        = render "users/shared/panels"
