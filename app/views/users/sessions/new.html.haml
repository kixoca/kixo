%section#content
  .container
    .row.page
      .eight.columns
        %h2 Sign in
        %h4.subheader Sign in to your existing kixo account

        = render :partial => "shared/show_flash"

        = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|

          = f.label :email
          = f.email_field :email

          = f.label :password
          = f.password_field :password

          - if devise_mapping.rememberable?
            %label
              = f.check_box :remember_me
              = t(:remember_me)

          .actions
            = f.submit "Sign in", :class => "button"

        =# render "devise/shared/links"

      .four.columns
        .panel
          %h5 Don't have an account?
          %p You can join kixo for free today and benefit from all the features
          %a.button.success{:href => new_user_registration_path} Sign up
