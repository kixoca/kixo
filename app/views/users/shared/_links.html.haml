- if devise_mapping.recoverable? && controller_name != 'passwords'
  =t "users.passwords.new.legend"
  = link_to t("users.passwords.new.label"), new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %h5=t "users.confirmations.new.legend"
  = link_to t("users.confirmations.new.label"), new_confirmation_path(resource_name), :class => "button small secondary"

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %h5=t "users.unlocks.new.legend"
  = link_to t("users.unlocks.new.label"), new_unlock_path(resource_name), :class => "button small secondary"