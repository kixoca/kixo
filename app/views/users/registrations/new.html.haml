.row
  .seven.columns.centered
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      .page
        %header
          .container
            %hgroup
              %h1=t "users.registrations.new.title"
              %h4.subheader=t "users.registrations.new.subtitle"
        %section
          .container
            = f.input :email
            = f.input :password
            = f.input :password_confirmation
        %section
          .container
            = render "shared/location_selector", :f => f, :street_address => false
        %section
          .container
            %label
              = check_box_tag "user[is_a_professional]", true, false, :class => "toggle", :data => {:target => "#if_user_is_a_professional"}
              = t("users.fields.is_a_professional.label")
        %section#if_user_is_a_professional{:class => resource.is_a_professional? ? "" : "hidden"}
          .container
            = f.input :name
            = f.association :professions, :as => :select do
              = f.label :professions
              = f.select :professions, options_from_collection_for_select(@all_professions, "id", "name"), {:include_blank => true}
        %section
          .container
            = f.button :submit, t("users.registrations.new.submit")
    = render "users/shared/panels"