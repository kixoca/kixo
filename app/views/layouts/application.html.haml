!!!
%html

  %head
    %title Kixo
    = google_webfonts_link_tag :open_sans => [400, 700]
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body

    %header#header

      %nav.navbar
        .navbar-inner
          .container
            %a.brand{:href => "/"}
              %img{:src => "/assets/logo.png", :width => "90", :height => "35", :alt => "Kixo"}
            %ul.nav.actions
              - if user_signed_in?
                %li
                  .btn-group
                    %button.btn
                      %i.icon-user " "
                      = current_user.email
                    %button.btn.dropdown-toggle{:data => {:toggle => "dropdown"}}
                      %span.caret
                    %ul.dropdown-menu
                      %li
                        = link_to "Sign out", destroy_user_session_path, :method => :delete
              - else
                %li
                  %a.btn{:href => new_user_session_path} Sign in
                %li
                  %a.btn{:href => new_user_registration_path} Sign up
            %ul.nav
              %li
                %a.btn.btn-link{:href => "/"} Home
              %li
                %a.btn.btn-link{:href => "/how-it-works"} How It Works
              %li
                %a.btn.btn-link{:href => "/about"} About

    %section#content
      .container

        .row
          .span8
            %section#main
              = yield
          .span4
            %aside#sidebar

    %footer#footer
