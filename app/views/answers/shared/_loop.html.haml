- unless answer.nil? or answer.author.nil?
  .answer{:id => "ans#{answer.id}"}
    .row
      .nine.columns
        .details
          = simple_format(answer.details)
        %p.meta
          %span.created_at
            = "Answered #{time_ago_in_words(answer.created_at)} ago"
        - if answer.author == current_user
          .actions
            = link_to 'Delete answer', question_answer_path(answer.question, answer), :confirm => 'Are you sure?', :method => :delete, :class => "delete"
      .three.columns.text-center
        = link_to professional_path(answer.author) do
          = image_tag answer.author.headshot.url(:small), :class => "headshot"
          .author.professional
            .name
              = link_to answer.author.name, professional_path(answer.author)
            .whois
              %span.professions
                = answer.author.professions_list