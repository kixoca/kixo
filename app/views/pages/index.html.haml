= render "shared/hero", :who => @who, :where => @where
%section#content
  .container
    .row
      .nine.columns
        .page
          %header
            .container
              %h2= t("questions.recent.title")
          %section.filter
            .container.tight
              %dl.sub-nav.filter
                %dd{:class => (params[:filter].blank? or params[:filter] == "all") ? "active" : ""}
                  = link_to t("questions.filters.all"), "?filter=all"
                - if user_signed_in?
                  %dd{:class => params[:filter] == "mine" ? "active" : ""}
                    = link_to t("questions.filters.mine"), "?filter=mine"
                - if user_signed_in? and current_user.is_professional
                  %dd{:class => params[:filter] == "for_me" ? "active" : ""}
                    = link_to t("questions.filters.for_me"), "?filter=for_me"
                %dd{:class => params[:filter] == "most_popular" ? "active" : ""}
                  = link_to t("questions.filters.most_popular"), "?filter=most_popular"
                %dd{:class => params[:filter] == "answered" ? "active" : ""}
                  = link_to t("questions.filters.answered"), "?filter=answered"
                %dd{:class => params[:filter] == "unanswered" ? "active" : ""}
                  = link_to t("questions.filters.unanswered"), "?filter=unanswered"
          %section
            .container
              - unless @questions.blank?
                %ul.looper.questions
                  - @questions.each do |question|
                    %li= render "questions/shared/loop", :question => question
              - else
                %p.no-records= t("questions.count.zero")
      .three.columns
        %aside#sidebar
          %section
            %h5.section-title
              = t("professionals.top_contributors.title")
            - unless @top_contributors.blank?
              %ul.looper.tight.professionals.top-contributors
                - @top_contributors.each do |professional|
                  %li= render "professionals/loops/minimal", :professional => professional
            - else
              %p.no-records= t("professionals.top_contributors.count.zero")
          = render "shared/ads"
