  %p= t("users.mailer.welcome_email.content.for_user", :new_user_session_url => new_user_session_url(:locale => @user.locale.code), :new_question_url => new_question_url(:locale => @user.locale.code), :search_professionals_url => search_professionals_url(:locale => @user.locale.code), :locale => @user.locale.code).html_safe