%section#content
  .container
    .row
      .twelve.columns
        %hgroup.hr
          %h1
            = @locality.name
          %h3.subheader
            = "Find, ask and consult professionals in #{@locality.name}"
      .eight.columns
        %section.browse-by-taxonomy
          .container
            %h4
              = "Browse #{@locality.name} professionals"
            %ul.categories.block-grid.two-up
              - @all_categories.each do |category|
                %li.category
                  %span.category-name
                    = category.name
                  %ul
                    %li
                      %span.topics-title
                        = "Topics"
                      %ul.topics.csv
                        - category.topics.each do |topic|
                          %li.topic
                            %a.taxonomy-link.topic-name{:href => locality_topic_path(@locality, topic), :title => "#{topic.name} in #{@locality.name}, #{@region.name}, #{@country.name}"}
                              = topic.name
                    %li
                      %span.professions-title
                        = "Professions"
                      %ul.professions.csv
                        - category.professions.each do |profession|
                          %li.profession
                            %a.taxonomy-link.profession-name{:href => locality_profession_path(@locality, profession), :title => "#{profession.name} in #{@locality.name}, #{@region.name}, #{@country.name}"}
                              = profession.name
      .four.columns
        %section
          .panel
            %h5
              = "Top-rated professionals in #{@locality.name}"
            - unless @professionals.empty?
              %ul.professionals.top-rated
                - @professionals.each do |professional|
                  %li.professional
                    = render "users/shared/loops/minimal", :professional => professional
