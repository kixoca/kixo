%section#content
  .container
    .row
      .twelve.columns
        .header-group
          %h1
            = @locality.name
          %h3.subheader
            = "Find, ask and consult professionals in #{@locality.name}"
        %hr
      .nine.columns
        %section#browse
          .container
            %h4
              = "Browse #{@locality.name} professionals by categories, topics and professions"
            %ul.categories.block-grid.three-up
              - @all_categories.each do |category|
                %li.category
                  = category.name
                  %ul
                    %li
                      = "#{category.name} topics"
                      %ul.topics
                        - category.topics.each do |topic|
                          %li.topic
                            %a{:href => locality_topic_path(@locality, topic), :title => "#{topic.name} in #{@locality.name}, #{@region.name}, #{@country.name}"}
                              = topic.name
                    %li
                      = "#{category.name} professions"
                      %ul.professions
                        - category.professions.each do |profession|
                          %li.profession
                            %a{:href => locality_profession_path(@locality, profession), :title => "#{profession.name} in #{@locality.name}, #{@region.name}, #{@country.name}"}
                              = profession.name
      .three.columns
        %section#professionals
          %h4
            = "Top-rated professionals in #{@locality.name}"
          - unless @professionals.empty?
            %ul.professionals
              - @professionals.each do |professional|
                %li.professional
                  = render "professionals/shared/loop", :professional => professional
