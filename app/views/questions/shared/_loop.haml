.question.loop.page
  .page-body
    .content
      %h3.title
        %a{:href => url_for(question)}
          = question.title
    .meta
      %time.created_at{:datetime => question.created_at}
        = "Asked #{time_ago_in_words(question.created_at)} ago"
      %span.location
        = "in #{question.user.short_address}"
    .answers
      - if question.answers.nil?
        %p.no-records No answers yet.
      - else
        %ul
          - question.answers.each do |answer|
            %li
              = answer.professional.name