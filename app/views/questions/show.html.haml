%section#content
  .container
    .row
      .eight.columns
        .page.question
          %header.page-head
            .container
              %h1.title
                = @question.title
              %p.meta
                %time.created_at{:datetime => @question.created_at}
                  = "Asked #{time_ago_in_words(@question.created_at)} ago"
                %span.location
                  = "in #{@author.short_address}"
              %p.topics
                Posted in
                = @topics.map {|topic| link_to topic.name, category_topic_path(topic.category, topic)}.join(", ").html_safe
          .page-body
            %section#details.details.page-section
              .container
                = @question.details
            %section#answers.answers.page-section
              .container
                - unless @answers.nil?
                  %ul
                    - @answers.each do |answer|
                      %li
                        = render "answers/shared/loop", :answer => answer
                - else
                  %p.no-records No answers yet.
                = render "answers/shared/new", :question => @question
      .four.columns
        .panel
          %h5 Related professionals
          %ul.related-professionals
            - @related_professionals.each do |professional|
              %li
                = render "professionals/shared/list", :professional => professional
