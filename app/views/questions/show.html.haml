%section#content
  .container
    .row
      .eight.columns
        .page.question
          %header
            .container
              %h1.title
                = @question.title
              %p.meta
                %time.created_at{:datetime => @question.created_at}
                  = "Asked #{time_ago_in_words(@question.created_at)} ago"
                %span.location
                  = "in #{@author.short_address}"
              %p.topics
                Posted in
                = @topics.map {|topic| link_to topic.name, category_topic_path(topic.category, topic)}.join(", ").html_safe
          %section#details
            .container
              = @question.details
          %section#answers
            .container
              - unless @answers.nil?
                %ul.answers
                  - @answers.each do |answer|
                    %li
                      = render "answers/shared/loop", :answer => answer
              - else
                %p.no-records No answers yet.
              = render "answers/shared/new", :question => @question
      .four.columns
        .panel
          %h5 Related professionals
          - unless @related_users.blank?
            %ul.related-users
              - @related_users.each do |user|
                %li
                  = render "users/shared/list", :user => user
          - else
            %p.no-records
              No related professionals found.
