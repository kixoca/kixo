.location-selector
  .row
    .three.columns
      = f.label :country_id, t("location_selector.fields.country.label"), :class => "inline right"
    .seven.columns.end
      = f.select :country_id, @all_countries.collect {|country| [country.name, country.id]}, {:include_blank => true}, {:class => "country"}
  .row
    .three.columns
      = f.label :region_id, t("location_selector.fields.region.label"), :class => "inline right"
    .seven.columns.end
      = f.select :region_id, @all_regions.collect {|region| [region.name, region.id, {"data-country" => region.country.id}]}, {:include_blank => true}, {:class => "region"}
  .row
    .three.columns
      = f.label :locality_id, t("location_selector.fields.locality.label"), :class => "inline right"
    .seven.columns.end
      = f.select :locality_id, @all_localities.collect {|locality| [locality.name, locality.id, {"data-country" => locality.region.country.id, "data-region" => locality.region.id}]}, {:include_blank => true}, {:class => "locality"}
  - if defined?(postal_code) and postal_code != false
    .row
      .three.columns
        = f.label :postal_code, t("location_selector.fields.postal_code.label"), :class => "inline right"
      .seven.columns.end
        = f.text_field :postal_code
  - if defined?(street_address) and street_address != false
    .row
      .three.columns
        = f.label :street_address_1, t("location_selector.fields.street_address_1.label"), :class => "inline right"
      .seven.columns.end
        = f.text_field :street_address_1
    .row
      .three.columns
        = f.label :street_address_2, t("location_selector.fields.street_address_2.label"), :class => "inline right"
      .seven.columns.end
        = f.text_field :street_address_2