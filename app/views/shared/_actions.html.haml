%section#actions
  #actions-tabs
    .container
      .row
        .twelve.columns
          %dl.tabs.three-up
            %dd{:class => @current_action_tab == "ask" ? "active" : ""}
              %a{:href => "#ask"}
                .hide-for-small
                  %i.icon-question-sign
                  %span
                    =t :action_ask
                .show-for-small
                  %i.icon-question-sign
                .arrow
            %dd{:class => @current_action_tab == "find" ? "active" : ""}
              %a{:href => "#find"}
                .hide-for-small
                  %i.icon-search
                  %span
                    =t :action_find
                .show-for-small
                  %i.icon-search
                .arrow
            %dd{:class => @current_action_tab == "consult" ? "active" : ""}
              %a{:href => "#consult"}
                .hide-for-small
                  %i.icon-user
                  %span
                    =t :action_consult
                .show-for-small
                  %i.icon-user
                .arrow
  #actions-tabs-content
    %ul.tabs-content
      %li#askTab{:class => @current_action_tab == "ask" ? "active" : ""}
        .row
          .three.columns.text-center
            %img{:src => "/assets/banner_ask_char.png", :width => 250, :height => 160}
          .nine.columns
            .container
              %hgroup
                %h2 Ask professionals
                %h3.subheader Get free advice from experienced professionals!
              = form_tag new_question_path, :method => "get" do
                .row
                  .ten.columns
                    = text_field_tag "question[title]", nil, :placeholder => t(:question_placeholder), :class => "oversize"
                  .two.columns
                    = submit_tag t(:action_ask), :class => "radius button expand postfix"
      %li#findTab{:class => @current_action_tab == "find" ? "active" : ""}
        .row
          .three.columns.text-center
            %img{:src => "/assets/banner_find_char.png", :width => 250, :height => 160}
          .nine.columns
            .container
              %hgroup
                %h2 Find professionals
                %h3.subheader Find top-rated professionals near you!
              = form_tag users_path, :method => "get" do
                .row
                  .six.columns
                    = text_field_tag "what", @what, :placeholder => "What?", :class => "oversize"
                  .four.columns
                    = text_field_tag "where", @where, :placeholder => "Where?", :class => "oversize"
                  .two.columns
                    = submit_tag t(:action_find), :class => "radius button expand postfix"
      %li#consultTab{:class => @current_action_tab == "consult" ? "active" : ""}
        .row
          .three.columns.text-center
            %img{:src => "/assets/banner_consult_char.png", :width => 250, :height => 160}
          .nine.columns
            .container
              %hgroup
                %h2 Consult professionals
                %h3.subheader Meet online with experienced professionals
              %form
                .row
                  .ten.columns
                    %input#what{:type => "text", :placeholder => "Search for professionals by topic", :class => "oversize"}
                  .two.columns
                    %a.radius.button.expand.postfix Search